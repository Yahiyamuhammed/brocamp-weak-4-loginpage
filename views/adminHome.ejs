<%- include('header',{title:'admin page'}) -%>

<div class="container">
    <div class="container">
        <div class="d-flex justify-content-between ml-auto align-items-center mb-4">
            <h1 class="display-4">Admin Panel - User List</h1>
            <div>
                <a href="/admin/addUser" class="btn btn-primary btn-lg">Add User</a>
                <a href="/admin/logout" class="btn btn-danger btn-lg">Logout</a>
            </div>
        </div>
    
        <!-- Search Form -->
        <form action="/admin/searchUser" method="GET" class="form-inline mb-4">
            <div class="input-group w-50">
                <input 
                    class="form-control form-control-lg" 
                    type="search" 
                    name="search" 
                    placeholder="Search by name or email" 
                    aria-label="Search"
                    required
                >
                <div class="input-group-append mx-2 d-flex justify-content-between align-items-center">
                    <div>
                        <button class="btn btn-outline-success btn-lg" type="submit">Search</button>
                    <button type="button" class="btn btn-secondary btn-lg ml-2" onclick="window.location.href='/admin/home'">Cancel</button>
                    </div>
                    
                    
                    
                </div>
            </div>
        </form>
    </div>
    

    <div class="row">
      <% users.forEach(function(user) { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header">
              <h5><%= user.name %></h5> <!-- Display user name -->
            </div>
            <div class="card-body">
              <p><strong>Email:</strong> <%= user.email %></p> <!-- Display user email -->
              <p><strong>Joined:</strong> <%= new Date(user.Date).toDateString() %></p> <!-- Display join date -->
              <p><strong>Status:</strong> <%= user.status %></p> <!-- Display user status -->

              <!-- Button to take action on the user -->
              <a href="/admin/editUser/<%= user._id %>" class="btn btn-primary">Edit Details</a>
              <a href="/admin/deleteUser/<%= user._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete User</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
